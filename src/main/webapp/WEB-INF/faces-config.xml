<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd" version="2.3">

	<component>
		<component-type>es.nivel36.laie.core.view.component.RomaMenu</component-type>
		<component-class>es.nivel36.laie.core.view.component.RomaMenu</component-class>
	</component>

	<render-kit>
		<renderer>
			<component-family>es.nivel36.laie.core.view.component</component-family>
			<renderer-type>es.nivel36.laie.core.view.component.RomaMenuRenderer</renderer-type>
			<renderer-class>es.nivel36.laie.core.view.component.RomaMenuRenderer</renderer-class>
		</renderer>
	</render-kit>

	<application>
		<resource-bundle>
			<base-name>es.nivel36.laie.i18n</base-name>
			<var>i18n</var>
		</resource-bundle>
		<message-bundle>es.nivel36.laie.messages</message-bundle>
		<locale-config id="es">
			<default-locale>es_ES</default-locale>
		</locale-config>
	</application>

</faces-config>
