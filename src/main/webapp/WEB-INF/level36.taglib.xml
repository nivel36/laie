<facelet-taglib version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd">

	<namespace>http://level36.es/ui</namespace>

	<tag>
		<tag-name>input</tag-name>
		<source>tags/input.xhtml</source>

		<!-- Field -->
		<attribute>
			<name>id</name>
			<required>true</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<name>rendered</name>
			<required>false</required>
			<type>boolean</type>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<name>labelStyleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<name>inputStyleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<name>messagesStyleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>

		<!-- Label -->
		<attribute>
			<name>label</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>

		<!-- Input -->
		<attribute>
			<name>type</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<name>value</name>
			<required>true</required>
			<type>java.lang.Object</type>
		</attribute>
		<attribute>
			<name>required</name>
			<required>false</required>
			<type>boolean</type>
		</attribute>
	</tag>
</facelet-taglib>